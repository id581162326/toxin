{% macro bullet_list(props) %}
  {% set bullet_list_label_id = 'bullet-list__label' | uniqid %}
  {% set label = props.label %}
  {% set list = props.list %}

  <div class="bullet-list">
    <span class="bullet-list__label{% if hidden_label %} bullet-list__label_hidden{% endif %}" id="{{ bullet_list_label_id }}">
      {{ label }}
    </span>
    <ul class="bullet-list__items" aria-labelledby="{{ bullet_list_label_id }}">
      {% for item in list %}
        <li class="bullet-list__item">
          <span class="bullet-list__text">{{ item }}</span>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endmacro %}