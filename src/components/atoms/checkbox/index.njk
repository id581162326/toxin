{% from 'assets/icons/index.njk' import check_mark %}

{% macro checkbox(name, appearance='checkbox', label, description, checked, disabled) %}
  {% set checkbox_label_id = 'checkbox__label' | uniqid %}
  {% set checkbox_desc_id = 'checkbox__description' | uniqid %}

  <label class="checkbox checkbox_appearance_{{ appearance }} {% if description %}checkbox_with_description{% endif %}">
    <input
      class="checkbox__input js-checkbox__input"
      name="{{ name }}"
      type="checkbox"
      aria-labelledby="{{ checkbox_label_id }}"
      {% if description %}aria-describedby="{{ checkbox_desc_id }}" {% endif %}
      {% if checked %}checked{% endif %}
      {% if disabled %}disabled{% endif %}
    >
    <span class="checkbox__mark">
      {% if appearance==='checkbox' %}
      {{ check_mark(class='checkbox__check-icon', width=10, height=8, gradient=true) }}
      {% elseif appearance==='toggle' %}
      <span class="checkbox__inner-circle"></span>
      {% endif %}
    </span>
    <span class="checkbox__label" id="{{ checkbox_label_id }}">{{ label }}</span>
    {% if description %}<span class="checkbox__description" id="{{ checkbox_desc_id }}">{{ description }}</span>{% endif %}
  </label>
{% endmacro %}
