{% macro range_slider(label) %}
  <div class="range-slider js-range-slider">
    <label class="range-slider__field-wrap">
      <span class="range-slider__label">{{ label }}</span>
      <input class="range-slider__field js-range-slider__field" readonly>
    </label>

    <div class="range-slider__input js-range-slider__input"></div>
  </div>
{% endmacro %}