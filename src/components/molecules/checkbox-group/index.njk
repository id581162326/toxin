{% from 'atoms/checkbox/index.njk' import checkbox %}

{% macro checkbox_group(group) %}
  <ul class="checkbox-group js-checkbox-group">
    {% for item in group %}
      <li class="js-checkbox-group__item">
        {{ checkbox(checked=item.checked, label=item.label, name=item.name) }}
      </li>
    {% endfor %}
  </ul>
{% endmacro %}