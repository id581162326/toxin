{% macro arrow_expand(width, height, class) %}
  <svg
    {% if class %}class="{{ class }}"{% endif %}
    width="{{ width }}"
    height="{{ height }}"
    viewBox="0 0 {{ width }} {{ height }}"
    fill="currentColor" xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M10.5938 0.578125L12 1.98438L6 7.98438L0 1.98438L1.40625 0.578125L6 5.17188L10.5938 0.578125Z"
          fill="currentColor"/>
  </svg>
{% endmacro %}

{% macro arrow_forward(width, height, gradient) %}
  <svg
    width="{{ width }}"
    height="{{ height }}"
    viewBox="0 0 {{ width }} {{ height }}"
    fill="{% if gradient %}url(#paint0_linear){% else %}currentColor{% endif %}"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z"
      fill="{% if gradient %}url(#paint0_linear){% else %}currentColor{% endif %}"
    />

    {% if gradient %}
      <defs>
        <linearGradient id="paint0_linear" x1="9" y1="-13" x2="9" y2="31" gradientUnits="userSpaceOnUse">
          <stop stop-color="#BC9CFF"/>
          <stop offset="1" stop-color="#8BA4F9"/>
        </linearGradient>
      </defs>
    {% endif %}
  </svg>
{% endmacro %}